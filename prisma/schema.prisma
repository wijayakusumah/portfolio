generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id          Int       @id @default(autoincrement())
  name        String
  industry    String?
  website     String?
  description String?
  logo        String?
  projects    Project[]
}

model Project {
  id          Int      @id @default(autoincrement())
  companyId   Int
  name        String
  slug        String   @unique
  type        String?
  role        String?
  url         String?
  visibility  String   @default("public")
  status      String?
  summary     String?
  impact      Json?
  modules     Json?
  stack       Json?
  attachments Json?
  viewCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  company     Company  @relation(fields: [companyId], references: [id])
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
